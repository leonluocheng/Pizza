
<form role="form" class="tool-form" id="tool-add-provider">

    <div class="tool-form-content-loader">
        <div id="add-provider-loader" class="progress active progress-striped tool-form-progress visibility-hidden">
            <div class="progress-bar progress-bar-success active" 
                role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"
                style="width:100%;"></div>
        </div>
    </div>

    <div class="tool-form-header">
        <div class="tool-form-header-title">
            <h4><strong>ADD PROVIDER</strong></h4>
        </div>
        <div class="tool-form-header-desc">
            add a new provider. please provide all of the information.
        </div>
    </div>

    <div class="tool-form-content">
        <!--alerts-->
        <div class="tool-form-alerts">
            <!--success-->
            <div class="alert alert-success display-none" role="alert" id="add-provider-success">
                <strong>success!</strong> provider has been added.
            </div>

            <!--error-->
            <div class="alert alert-danger display-none" role="alert" id="add-provider-error">
                <strong>error!</strong><span id="add-provider-error-message"></span> &nbsp; please try again.
            </div>
        </div>

        <div class="input-group tool-form-content-input">
            <span class="input-group-addon" style="width:80px;">name</span>
            <input type="text" class="form-control" id="add-provider-name" placeholder="" style="width:418px;max-width:500px;">
        </div>

        <div class="input-group tool-form-content-input">
            <span class="input-group-addon" style="width:80px;">address</span>
            <input type="text" class="form-control" id="add-provider-address" placeholder="" style="width:418px;max-width:500px;">
        </div>

        <div class="row">

            <div class="input-group tool-form-content-input col-md-5 pad-right-5">
                <span class="input-group-addon">city</span>
                <input type="text" class="form-control" id="add-provider-city" placeholder="">
            </div>

            <div class="input-group tool-form-content-input col-md-3 pad-left-5 pad-right-5">
                <span class="input-group-addon">state</span>
                <input type="text" class="form-control" id="add-provider-state" placeholder="">
            </div>

            <div class="input-group tool-form-content-input col-md-4 pad-left-5">
                <span class="input-group-addon">zip</span>
                <input type="text" class="form-control" id="add-provider-zip" placeholder="">
            </div>

            <div class="input-group tool-form-content-input col-md-4 pad-left-15">
                <span class="input-group-addon">bank account</span>
                <input type="text" class="form-control" id="add-provider-bankaccount" placeholder="" style="width:390px;max-width:400px;">
            </div>

        </div>

        <div class="tool-form-content-buttons tool-form-content-input text-right">
            <button class="btn btn-danger" id="add-provider-reset">reset</button>
            <button class="btn btn-primary" id="add-provider-submit">submit</button>
        </div>

    </div>

</form>

