<form role="form" class="tool-form" id="tool-add-manager">

    <div class="tool-form-header">
        <div class="tool-form-header-title">
            <h4><strong>ADD MANAGER</strong></h4>
        </div>
        <div class="tool-form-header-desc">
            add a new manager. please provide all of the information.
        </div>
    </div>

    <div class="tool-form-content">

        <!--alerts-->
        <div class="tool-form-alerts">
            <!--success-->
            <div class="alert alert-success display-none" role="alert" id="add-manager-success">
                <strong>success!</strong> manager has been added.
            </div>

            <!--error-->
            <div class="alert alert-danger display-none" role="alert" id="add-manager-error">
                <strong>error!</strong> please try again.
            </div>
        </div>

        <div class="input-group tool-form-content-input">
            <span class="input-group-addon" style="width:80px;">name</span>
            <input type="text" class="form-control" id="add-manager-name" placeholder="" style="width:418px;max-width:500px;">
        </div>

        <div class="input-group tool-form-content-input">
            <span class="input-group-addon" style="width:80px;">address</span>
            <input type="text" class="form-control" id="add-manager-address" placeholder="" style="width:418px;max-width:500px;">
        </div>

        <div class="row">

            <div class="input-group tool-form-content-input col-md-5 pad-right-5">
                <span class="input-group-addon">city</span>
                <input type="text" class="form-control" id="add-manager-city" placeholder="">
            </div>

            <div class="input-group tool-form-content-input col-md-3 pad-left-5 pad-right-5">
                <span class="input-group-addon">state</span>
                <input type="text" class="form-control" id="add-manager-state" placeholder="">
            </div>

            <div class="input-group tool-form-content-input col-md-4 pad-left-5">
                <span class="input-group-addon">zip</span>
                <input type="text" class="form-control" id="add-manager-zip" placeholder="">
            </div>

        </div>

        <div class="tool-form-content-buttons tool-form-content-input text-right">
            <button class="btn btn-danger" id="add-manager-reset">reset</button>
            <button class="btn btn-primary" id="add-manager-submit">submit</button>
        </div>

    </div>

</form>

