
<form role="form" class="tool-form" id="tool-add-serviceRecord">

    <div class="tool-form-header">
        <div class="tool-form-header-title">
            <h4><strong>ADD Service Record</strong></h4>
        </div>
        <div class="tool-form-header-desc">
            add a new service record. please provide all of the information.
        </div>
    </div>

    <div class="tool-form-content">

        <!--alerts-->
        <div class="tool-form-alerts">
            <!--success-->
            <div class="alert alert-success display-none" role="alert" id="add-record-success" >
                <strong>success!</strong> service record has been added.
            </div>

            <!--error-->
            <div class="alert alert-danger display-none" role="alert" id="add-record-error">
                <strong>error!</strong> please try again.
            </div>
        </div>

        <div class="row">

            <div class="col-md-8">

                <div class="input-group tool-form-content-input pad-right-5">
                    <span class="input-group-addon">Member ID</span>
                    <input type="text" class="form-control" id="add-member-id" placeholder="">
                </div>

                <div class="row">
                    <div class="col-md-5 tool-form-content-buttons tool-form-content-input text-left">
                        <button class="btn btn-primary" id="add-record-check">Check</button>
                    </div>

                    <div class="col-md-7" id="check-member-status-display">
                       <h3 style="margin-top:3px;margin-bottom:3px;"> Test The Status </h3>
                    </div>
                </div>

                <div class="input-group tool-form-content-input pad-right-5">
                    <span class="input-group-addon">Service Code</span>
                    <input type="text" class="form-control" id="add-service-code" placeholder="">
                </div>


                <div class="input-group tool-form-content-input pad-right-5">
                    <span class="input-group-addon">Date Provided</span>
                    <input type="time" class="form-control" id="add-record-date"  placeholder="">
                </div>


                <div class="input-group tool-form-content-input pad-right-5">
                    <span class="input-group-addon" >Provider Number</span>
                    <input type="text" class="form-control" id="add-provider-id" placeholder="">
                </div>
           
             </div>

            <div class="col-md-4">
                <table data-toggle="table" data-url="data1.json" data-cache="false" data-height="299">
                    <thead>
                        <tr>
                            <th data-field="Service Code">Service Code</th>
                            <th data-field="Service Name">Service Name</th>
                            <th data-field="Service Fee">Service Fee</th>
                        </tr>
                    </thead>
                </table>
            </div>
    </div>

        <div class="tool-form-content-buttons tool-form-content-input text-right">
            <button class="btn btn-danger" id="add-record-reset">reset</button>
            <button class="btn btn-primary" id="add-record-submit">submit</button>
        </div>
</form>

