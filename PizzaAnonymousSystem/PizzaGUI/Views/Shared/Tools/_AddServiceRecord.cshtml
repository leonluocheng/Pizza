
<form role="form" class="tool-form" id="tool-add-serviceRecord">

    <div class="tool-form-header">
        <div class="tool-form-header-title">
            <h4><strong>ADD Service Record</strong></h4>
        </div>
        <div class="tool-form-header-desc">
            add a new service record. please provide all of the information.
        </div>
    </div>
    
    <div class="tool-form-content-large">

        <!--alerts-->
        <div class="tool-form-alerts">
            <!--success-->
            <div class="alert alert-success display-none" role="alert" id="add-service-record-success" >
                <strong>success!</strong> service record has been added.
            </div>

            <!--error-->
            <div class="alert alert-danger display-none" role="alert" id="add-service-record-error">
                <strong>error!</strong> <span id="add-service-record-error-message"></span> &nbsp;please try again.
            </div>

            <!--success-->
            <div class="alert alert-success display-none" role="alert" id="get-all-services-success" >
                <strong>success!</strong> provider directory has been refreshed.
            </div>

            <!--error-->
            <div class="alert alert-danger display-none" role="alert" id="get-all-services-error">
                <strong>error!</strong> <span id="get-all-services-error-message"></span> &nbsp;please try again.
            </div>
        </div>

        <div class="tool-form-subcontent row">
            
            <div class="col-md-8">

                <div class="tool-form-content-loader">
                    <div id="add-service-record-loader" class="progress active progress-striped tool-form-progress visibility-hidden">
                        <div class="progress-bar progress-bar-success" 
                            role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"
                            style="width:100%;"></div>
                    </div>
                </div>

                <div class="row">
                    
                    <div class="col-md-8 pad-right-5">

                        <div class="input-group tool-form-content-input pad-right-5">
                            <span class="input-group-addon" style="width:130px;">member ID</span>
                            <input type="text" class="form-control" id="add-service-record-member-id" placeholder="" style="width:363px;max-width:493px;">
                        </div>

                        <div class="row">
                            <div class="col-md-4 tool-form-content-buttons tool-form-content-input text-left">
                                <button class="btn btn-info" id="validate-member">validate member</button>
                            </div>

                            <div class="col-md-8">
                               <h4 id="validate-member-status" class="text-right pad-right-5 visibility-hidden" 
                                    style="margin-top:12px;margin-bottom:3px;">
                                    VALIDATED
                               </h4>
                            </div>
                        </div>

                        <hr style="margin-top:5px;margin-bottom:5px;margin-right:5px;"/>

                        <div class="input-group tool-form-content-input pad-right-5">
                            <span class="input-group-addon" style="width:130px;">service code</span>
                            <input type="text" class="form-control" id="add-service-record-service-code" placeholder="" style="width:363px;max-width:493px;">
                        </div>

                        <div class="input-group tool-form-content-input pad-right-5">
                            <span class="input-group-addon" style="width:130px;">date provided</span>
                            <input type="text" class="form-control" id="add-service-record-date" placeholder="" style="width:363px;max-width:493px;">
                        </div>

                        <div class="input-group tool-form-content-input pad-right-5">
                            <span class="input-group-addon" style="width:130px;">comments</span>
                            <input type="text" class="form-control" id="add-service-record-comments" placeholder="" style="width:363px;max-width:493px;">
                        </div>

                    </div>

                    <div class="col-md-4">
                        please validate member ID before submitting service record
                    </div>

                </div>

                <div class="tool-form-content-buttons tool-form-content-input text-right">
                    <button class="btn btn-danger" id="add-service-record-reset">reset</button>
                    <button class="btn btn-primary" id="add-service-record-submit" disabled="disabled">submit</button>
                </div>

            </div>

            <div class="col-md-4 pad-left-0">
            
                <div class="tool-form-content-loader">
                    <div id="get-all-services-loader" class="progress active progress-striped tool-form-progress visibility-hidden">
                        <div class="progress-bar progress-bar-success active" 
                            role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"
                            style="width:100%;"></div>
                    </div>
                </div>

                <div class="tool-form-content-input">
                    <div class="row">
                        <div class="col-md-8">
                            <h4><strong class="color-blue">PROVIDER DIRECTORY</strong></h4>
                        </div>
                        <div class="col-md-4 text-right">
                            <button class="btn btn-info" id="add-record-reset" data-bind="click: refreshServices">refresh</button>
                        </div>
                    </div>
                </div>

                <div class="tool-form-content-table-container">
                    <table class="table table-striped tool-form-content-table">
                        
                        <thead>
                            <tr>
                                <th data-field="Service Code">Service Code</th>
                                <th data-field="Service Name">Name</th>
                                <th data-field="Service Fee">Fee</th>
                            </tr>
                        </thead>

                        <tbody data-bind="foreach: services">
                            <tr>
                                <td data-bind="text: serviceCode"></td>
                                <td data-bind="text: name"></td>
                                <td data-bind="text: fee"></td>
                            </tr>
                   
                        </tbody>

                    </table>
                </div>

            </div>

        </div>

    </div>

</form>

