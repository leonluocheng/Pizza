

<form role="form" class="tool-form" id="tool-delete-service">

    <div class="tool-form-content-loader">
        <div id="delete-service-loader" class="progress active progress-striped tool-form-progress visibility-hidden">
            <div class="progress-bar progress-bar-success active" 
                role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"
                style="width:100%;"></div>
        </div>
    </div>

    <div class="tool-form-header">
        <div class="tool-form-header-title">
            <h4><strong>DELETE SERVICE</strong></h4>
        </div>
